{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sprzedawcy</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for seller in sellers %}
            <tr>
                <td><a href="{{ path('seller_show', { 'id': seller.id }) }}">{{ seller.id }}</a></td>
                <td>{{ seller.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('seller_show', { 'id': seller.id }) }}">Pokaz</a>
                        </li>
                        <li>
                            <a href="{{ path('seller_edit', { 'id': seller.id }) }}">Edytuj</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('seller_new') }}">Dodaj</a>
        </li>
    </ul>
{% endblock %}
