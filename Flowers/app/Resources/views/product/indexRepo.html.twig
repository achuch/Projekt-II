{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="font-style: italic;">Magazyn</h1>
    <label style="display: block;font-size: 1.2em; font-weight: 800; text-decoration: underline;">W magazynie znajdują sie produkty o łącznej wartości : {{ sum }} zł</label>
    <h2>Doniczkowe :</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Opis</th>
                <th>Ilosc</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            {% if product.type == "Doniczkowe" %}
                <tr>
                    <td><a href="{{ path('flowers_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.amountOfStock }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('flowers_show', { 'id': product.id }) }}">Pokaz</a>
                            </li>
                            <li>
                                <a href="{{ path('flowers_edit', { 'id': product.id }) }}">Edytuj</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <h2>Cięte :</h2>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Opis</th>
            <th>Ilosc</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            {% if product.type == "Cięte" %}
                <tr>
                    <td><a href="{{ path('flowers_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.amountOfStock }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('flowers_show', { 'id': product.id }) }}">Pokaz</a>
                            </li>
                            <li>
                                <a href="{{ path('flowers_edit', { 'id': product.id }) }}">Edytuj</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('flowers_new') }}">Dodaj</a>
        </li>
    </ul>
{% endblock %}
