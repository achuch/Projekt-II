{% extends "::base.html.twig" %}

{% block title %}Kwiaciarnia{% endblock %}

{% block body %}
    <div>
        <div style="width:100%; text-align: center">
            <h1>Kwiaty na każdą kieszeń!</h1>
        </div>

        <div id="divForLogIn" style="width: 17%; float: right; text-align: right;">
            <label style="font-style: italic; text-align: left;">Zaloguj sie aby wpełni korzystać z aplikacjji</label>
            {{ form_start(form) }}
                {{ form_row(form.emailAddress) }}
                {{ form_row(form.hashPassword) }}

                <div style="text-align: center">
                    <button type="submit" style="margin-top:10px;">Zaloguj</button>
                </div>
            {{ form_end(form) }}
        </div>

        <div style="width: 72%; float: right; font-style: italic;">
            <h2>Dowieziemy kwiaty w wybrane przez Ciebie miejsce...</h2>
            <h3 style="cursor: pointer; padding: 10px; border: groove #666666 0.5px; max-width: 150px;" onclick="a()">Dowiedz sie wiecej</h3>
            <div id="description" style="display: none; float:left; padding-left: 30px;">
                <h4>Zaloguj sie aby zlozyc zamowienie, a my dowieziemy je pod wskazany adres w obrebie calego miasta Krakow.</h4>
            </div>
        </div>

        <div style="width: 6%;float: left; ">
            <img src="{{ asset('Images/FlowersImg.jpg') }}" style="width: 150px; height: 100px;padding-left: 30px;">
        </div>




    </div>
    <div style="height: 1px; padding-right: 15px; padding-left: 15px; width:100%; text-align:center; background-color: black; margin-top: 40px; float: left"></div>

    <div id="content" style="width: 100%; height: 70%; float: left; margin-top: 50px;">
        <div class="assideMenu" style="width: 12%; min-height: 400px;">
            <a href="{{ path("index") }}">Strona Głowna</a></br>
            <a href="{{ path("index") }}">Wyswietl produkty</a></br>
            <a href="{{ path("index") }}">Zloz zamowienie</a></br>
            <a href="{{ path("index") }}">Zglos problem</a></br>
        </div>
        <div id="products" style="float: right; width: 82%; border: groove #999999 1px; border-top-left-radius: 16px; border-top-right-radius: 16px; min-height: 400px; padding: 20px;">
            Brak produktow...
        </div>
    </div>

    <script>
        function a() {
            document.getElementById('description').style.display = 'flex';
        }
    </script>

{% endblock %}


